<div class="block">
  <div class="content">
    <h2 class="title">Log in</h2>
    <div class="inner">
      <% form_tag :session do %>
        <p>
          <%= label_tag :email %><br />
          <%= text_field_tag :email %>
        </p>

        <p>
          <%= label_tag :password %><br />
          <%= password_field_tag :password %>
        </p>

        <p>
          <%= check_box_tag :remember_me %> <%= label_tag :remember_me %>
        </p>

        <p>
          <%= submit_tag "Log in" , :id => 'login_button' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
